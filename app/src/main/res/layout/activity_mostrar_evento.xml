<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.app.actividad5d.MostrarEvento"
    android:background="#dacaff">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="EVENTOS PARA: FECHA"
        android:id="@+id/tvFechaMostrar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#2731ff" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvMostrar"
        android:layout_below="@+id/tvFechaMostrar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:divider="#be3cff" />

</RelativeLayout>
